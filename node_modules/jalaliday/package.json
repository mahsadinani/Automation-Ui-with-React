{
  "name": "jalaliday",
  "version": "3.1.1",
  "packageManager": "pnpm@10.16.1",
  "description": "Persian (Jalali, Khorshidi) Plugin for Day.js",
  "author": "Ahad Birang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/farnabaz/jalaliday.git"
  },
  "keywords": [
    "dayjs",
    "date",
    "time",
    "immutable",
    "moment",
    "jalali"
  ],
  "exports": {
    ".": "./dist/index.mjs",
    "./dayjs": "./dist/dayjs/index.mjs",
    "./intl": "./dist/intl/index.mjs"
  },
  "main": "dist/index.mjs",
  "scripts": {
    "test": "vitest run",
    "lint": "eslint src/* test/*",
    "prepack": "obuild && pnpm size",
    "release": "release-it",
    "verify": "pnpm prepack && pnpm lint && pnpm test",
    "size": "size-limit"
  },
  "size-limit": [
    {
      "limit": "2.99 KB",
      "path": "dist/dayjs/index.mjs",
      "ignore": [
        "dayjs"
      ]
    },
    {
      "limit": "2.99 KB",
      "path": "dist/dayjs/plugin.mjs",
      "ignore": [
        "dayjs"
      ]
    }
  ],
  "pre-commit": [
    "lint"
  ],
  "jest": {
    "testEnvironment": "node",
    "roots": [
      "test"
    ],
    "testRegex": "test/(.*?/)?.*test.js$",
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/jest.transform.js"
    }
  },
  "peerDependencies": {
    "dayjs": "^1.11.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.3.0",
    "@babel/preset-env": "^7.28.3",
    "@size-limit/preset-small-lib": "^11.2.0",
    "codecov": "^3.8.3",
    "eslint": "^9.35.0",
    "gzip-size-cli": "^5.1.0",
    "mockdate": "^3.0.5",
    "obuild": "^0.2.1",
    "pre-commit": "^1.2.2",
    "release-it": "^19.0.4",
    "size-limit": "^11.2.0",
    "vitest": "^3.2.4"
  }
}
